            preserveRatio="true" AnchorPane.bottomAnchor="125.0" AnchorPane.leftAnchor="349.0"
            AnchorPane.rightAnchor="176.0" AnchorPane.topAnchor="125.0">
            <image>
              <Image url="@welcomePicture.jpg"/>
            </image>
            <effect>
              <Reflection/>
            </effect>
          </ImageView>
          <AnchorPane layoutX="658.0" prefHeight="55.0" prefWidth="67.0">
            <children>
              <Sphere fx:id="logOff" layoutX="48.0" layoutY="18.0" onMouseReleased="#closeWindow"
                radius="10.0" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="38.0"
                AnchorPane.rightAnchor="9.0" AnchorPane.topAnchor="8.0">
                <effect>
                  <ColorInput paint="#21cc76"/>
                </effect>
              </Sphere>
            </children>
          </AnchorPane>
        </children>
      </AnchorPane>
    </top>
  </BorderPane>
  <columnConstraints>
    <ColumnConstraints/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints/>
  </rowConstraints>
