<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="dbpersonalproject.dBProjectController1">
  <BorderPane prefHeight="200.0" prefWidth="200.0">
    <top>
      <AnchorPane prefHeight="400.0" prefWidth="725.0" style="-fx-background-color: #03A89E;"
        BorderPane.alignment="CENTER">
        <children>
          <Pane prefHeight="400.0" prefWidth="162.0" style="-fx-background-color: #C0C0C0;">
            <children>
              <VBox layoutX="33.0" prefHeight="400.0" prefWidth="97.0">
                <children>
                  <Button fx:id="connect" alignment="CENTER" maxHeight="-Infinity"
                    maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#goToNext"
                    prefHeight="58.0" prefWidth="97.0" text="Make Connection" textAlignment="CENTER"
                    wrapText="true">
                    <font>
                      <Font size="15.0"/>
                    </font>
                    <VBox.margin>
                      <Insets bottom="30.0" top="50.0"/>
                    </VBox.margin>
                  </Button>
                </children>
              </VBox>
            </children>
          </Pane>
          <Text layoutX="378.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome"
            textAlignment="CENTER" wrappingWidth="141.1761474609375"
            AnchorPane.bottomAnchor="327.89453125" AnchorPane.leftAnchor="377.1761474609375"
            AnchorPane.rightAnchor="205.8238525390625" AnchorPane.topAnchor="33.98828125">
            <font>
              <Font name="Lucida Calligraphy Italic" size="28.0"/>
            </font>
          </Text>
